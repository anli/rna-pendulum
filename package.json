{
  "name": "rna-pendulum",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cq": "codeclimate analyze -f html > code-quality.html src && open code-quality.html",
    "ci:test": "npm run lint && npm run test -- --coverage",
    "e2e:release": "detox build -c android.emu.release && detox test -c android.emu.release",
    "e2e": "detox build -c android.emu.debug && detox test -c android.emu.debug",
    "reset": "cd android && ./gradlew clean && cd .. && watchman watch-del-all && npm start -- --reset-cache",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "react": "16.11.0",
    "react-native": "0.62.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^1.0.0",
    "@types/detox": "^16.4.1",
    "@types/jest": "^24.0.24",
    "@types/react-native": "^0.62.0",
    "@types/react-test-renderer": "16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-jest": "^24.9.0",
    "detox": "^17.5.6",
    "eslint": "^6.5.1",
    "eslint-plugin-detox": "^1.0.0",
    "jest": "^24.9.0",
    "jest-circus": "^26.4.2",
    "metro-react-native-babel-preset": "^0.58.0",
    "prettier": "^2.0.4",
    "react-test-renderer": "16.11.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/e2e/"
    ],
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
